@model List<Instructor>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Salary</th>
            <th scope="col">Address</th>
            <th scope="col">Department</th>
            <th scope="col">Course</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.Address</td>
                <td>@item.Department.Name</td>
                <td>@item.Course.Name</td>
                <td><img src="/Images/@item.Image" style="width:50px;height:50px" /></td>
                <td><a href="/instructor/detail/@item.Id"><button type="button" class="btn btn-primary">Detail</button></a> </td>
                <td><a href="/instructor/GetEditView/@item.Id"><button type="button" class="btn btn-primary">Edit</button></a> </td>
                <td><a href="/instructor/DeleteInstructor/@item.Id"><button type="button" class="btn btn-danger">Delete</button></a> </td>
            </tr>
        }
    </tbody>
</table>
<a href="/instructor/getview" style="margin-top:10px"> <button type="button" class="btn btn-primary">Add</button></a>