@model InstructorDto
@{
    SelectList selectListDeptItems = new SelectList(ViewBag.Departments, "Id", "Name");
    SelectList selectListCourseItems = new SelectList(ViewBag.Courses, "Id", "Name");
}
<form asp-action="AddInstructor" asp-controller="instructor" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col">
            <label asp-for="Name"></label>
            <input class="form-control" placeholder="Name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Address"></label>
            <input class="form-control" placeholder="Address" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Image"></label>
            <input class="form-control" required placeholder="Image" asp-for="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Salary"></label>
            <input class="form-control" placeholder="Salary" asp-for="Salary">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="DepartId" for="inputState"></label>
            <select asp-items="selectListDeptItems" asp-for="DepartId" id="inputState" class="form-control">
            </select>
            <span asp-validation-for="DepartId" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="CourseId" for="inputState"></label>
            <select asp-items="selectListCourseItems" asp-for="CourseId" id="inputState" class="form-control">
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}