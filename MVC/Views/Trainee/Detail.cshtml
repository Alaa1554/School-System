@model Trainee
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="/Images/@Model.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Address: @Model.Address</li>
        <li class="list-group-item">Grade: @Model.Grade</li>
        <li class="list-group-item">Department: @ViewBag.deptName</li>
    </ul>
</div>