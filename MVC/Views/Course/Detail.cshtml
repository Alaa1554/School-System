@model Course
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Address: @Model.Degree</li>
        <li class="list-group-item">Grade: @Model.MinDegree</li>
        <li class="list-group-item">Department: @ViewBag.deptName</li>
    </ul>
</div>